<% name = "product[attachments_attributes][#{idx}]" %>

<li>
  <div style="display: inline-block">
    <%= image_tag attachment.image.url(:small), width: 300, class: "img-thumbnail" %><br>
    <%= hidden_field_tag "#{name}[id]", attachment.id %>
    <span class="pull-right">Remove attachment: <%= check_box_tag "#{name}[_destroy]" %></span>
  </div>
</li>
